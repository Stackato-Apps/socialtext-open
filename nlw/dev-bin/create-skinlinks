#!/bin/bash -e
# @COPYRIGHT@

rm -f share/skin/.gitignore
echo "# This file auto-generated by dev-bin/create-skinlinks" >> share/skin/.gitignore
for skin in `ls ../socialtext-skins/skin`; do
    target=../../../socialtext-skins/skin/$skin
    link=share/skin/$skin
    [ -s $link ] || ln -sf $target $link
    echo $skin >> share/skin/.gitignore
done
