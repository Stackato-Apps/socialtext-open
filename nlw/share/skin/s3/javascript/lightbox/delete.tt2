[%# vim: set et sts=2 sw=2: %]
<div class="lightbox" id="st-delete-lightbox">
  <form id="st-delete-form" action="" method="GET">
    <input type="hidden" name="action" value="delete_page" />
    <input type="hidden" name="page_name" value="[% page_title | html_encode %]" />
    <div class="title">
      [% loc('page.delete') %]
    </div>

    <br/>
    <p>
      [% loc('page.delete=title?', page_title) %]
    </p>

    <div class="buttons">
        <ul class="widgetButton" style="float:left; padding:10px">
          <li class="flexButton">
              <a id="st-delete-deletelink" class="submit genericOrangeButton" href="#">[% loc('do.delete') %]</a>
          </li>
        </ul>
        <ul class="widgetButton" style="float:left; padding:10px">
          <li class="flexButton">
              <a id="st-delete-cancellink" class="close genericOrangeButton" href="#">[% loc('do.cancel') %]</a>
          </li>
        </ul>
    </div>
  </form>
</div>

