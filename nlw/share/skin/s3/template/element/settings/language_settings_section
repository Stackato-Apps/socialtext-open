[% INCLUDE element/settings/start %]
<dl class="form">
  <dt><label>[% loc("loc.settings") %]</label></dt>
  <dd>
    <div style="white-space: nowrap"><label>
      [% loc('config.language?') %]
      <select id="locale" name="locale">
        [% FOR l IN locales %]
        <option value="[% l.value %]" [% IF l.selected %]selected="selected"[% END %]>[% l.label %]</option>
        [% END %]
      </select>
    </label></div>
  </dd>
