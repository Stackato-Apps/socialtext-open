<br>
<script>
$(function(){
    $('#locale').change(function(){
        setTimeout(function(){
            document.forms['settings'].submit();
        }, 100);
        return true;
    });
    $('form[name=settings] li.flexButton').hide();
});
</script>
[% INCLUDE element/settings/stop %]
